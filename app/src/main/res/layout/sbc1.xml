<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:id="@+id/mainview"
    android:layout_height="fill_parent"
    android:background="#ffff">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.v7.widget.CardView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            app:cardCornerRadius="4dp"
            app:cardElevation="2dp"
            android:id="@+id/card1"
            android:layout_margin="8dp">
            <RelativeLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:background="@drawable/cardaa"/>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            app:cardCornerRadius="4dp"
            app:cardElevation="2dp"
            android:visibility="gone"
            android:id="@+id/cardback1"
            android:layout_margin="8dp">
            <RelativeLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:background="@drawable/cardaa1"/>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_below="@+id/card1"
            app:cardCornerRadius="4dp"
            app:cardElevation="2dp"
            android:id="@+id/card2"
            android:layout_margin="8dp">
            <RelativeLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:background="@drawable/cardbb"/>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_below="@+id/card1"
            app:cardCornerRadius="4dp"
            android:visibility="gone"
            app:cardElevation="2dp"
            android:id="@+id/cardback2"
            android:layout_margin="8dp">
            <RelativeLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:background="@drawable/cardbb1"/>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_height="match_parent"
            android:layout_below="@+id/card2"
            android:layout_width="match_parent"
            app:cardCornerRadius="4dp"
            app:cardElevation="2dp"
            android:id="@+id/card3"
            android:layout_margin="8dp">
            <RelativeLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:background="@drawable/cardcc"/>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            app:cardCornerRadius="4dp"
            android:layout_below="@+id/card3"
            app:cardElevation="2dp"
            android:id="@+id/card4"
            android:layout_margin="8dp">
            <RelativeLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:background="@drawable/carddd"/>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            app:cardCornerRadius="4dp"
            android:layout_below="@+id/card4"
            app:cardElevation="2dp"
            android:id="@+id/card5"
            android:layout_margin="8dp">
            <RelativeLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:background="@drawable/cardee"/>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            app:cardCornerRadius="4dp"
            android:layout_below="@+id/card4"
            app:cardElevation="2dp"
            android:visibility="gone"
            android:id="@+id/cardback5"
            android:layout_margin="8dp">
            <RelativeLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:background="@drawable/cardee1"/>
        </android.support.v7.widget.CardView>
        </RelativeLayout>
    </ScrollView>