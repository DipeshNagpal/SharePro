<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:background="#000000">
        <View
            android:layout_width="10dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp"
            android:layout_height="400dp"
            android:background="#f44336"/>
        <View
            android:layout_width="10dp"
            android:layout_marginTop="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="40dp"
            android:layout_height="400dp"
            android:background="#f44336"/>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/centercircle"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:background="@drawable/circleimageviewsample"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/centercircle"
            android:textColor="#ffffff"
            android:layout_centerHorizontal="true"
            android:text="Dipesh Nagpal"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/position"
            android:textSize="17sp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/name"
            android:textColor="#ffffff"
            android:layout_centerHorizontal="true"
            android:text="QA Lead"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Tel"
            android:layout_marginLeft="110dp"
            android:textSize="16sp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/position"
            android:textColor="#ffffff"
            android:text="Tel:"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/phone"
            android:layout_marginLeft="20dp"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@+id/Tel"
            android:textSize="16sp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/position"
            android:textColor="#ffffff"
            android:text="+919818489269"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/EmailText"
            android:layout_marginLeft="60dp"
            android:textSize="16sp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/Tel"
            android:textColor="#ffffff"
            android:text="E-mail:"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Email"
            android:layout_marginLeft="15dp"
            android:textSize="16sp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/EmailText"
            android:layout_below="@+id/Tel"
            android:textColor="#ffffff"
            android:text="dipeshnagpal17@gmail.com"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Web"
            android:layout_marginLeft="90dp"
            android:textSize="16sp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/EmailText"
            android:textColor="#ffffff"
            android:text="Web:"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/company"
            android:layout_marginLeft="20dp"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@+id/Web"
            android:textSize="16sp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/Email"
            android:textColor="#ffffff"
            android:text="www.loudshout.com"/>
        </RelativeLayout>
    </ScrollView>