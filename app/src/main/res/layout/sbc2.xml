<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/edit"
            android:layout_marginTop="30dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:text="Create Business Card"
            android:textColor="#622C2C"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="Full Name"
            android:textColor="#622C2C"
            android:textStyle="bold"/>
        <View
            android:layout_gravity="center_horizontal"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="#622C2C"
            android:layout_marginTop="5px"/>
        <EditText
            android:id="@+id/fullName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Enter full name"
            android:layout_marginTop="10dp"
            android:textSize="16sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="Position"
            android:textColor="#622C2C"
            android:textStyle="bold"/>
        <View
            android:layout_gravity="center_horizontal"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="#622C2C"
            android:layout_marginTop="5px"/>
        <EditText
            android:id="@+id/position"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="what role do you play?"
            android:layout_marginTop="10dp"
            android:textSize="16sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="Company"
            android:textColor="#622C2C"
            android:textStyle="bold"/>
        <View
            android:layout_gravity="center_horizontal"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="#622C2C"
            android:layout_marginTop="5px"/>
        <EditText
            android:id="@+id/company"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Where do you work?"
            android:layout_marginTop="10dp"
            android:textSize="16sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="Contact No"
            android:textColor="#622C2C"
            android:textStyle="bold"/>
        <View
            android:layout_gravity="center_horizontal"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="#622C2C"
            android:layout_marginTop="5px"/>

        <EditText
            android:id="@+id/phone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="What's your contact number"
            android:layout_marginTop="10dp"
            android:inputType="phone"
            android:textSize="16sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="Email"
            android:textColor="#622C2C"
            android:textStyle="bold"/>
        <View
            android:layout_gravity="center_horizontal"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="#622C2C"
            android:layout_marginTop="5px"/>

        <EditText
            android:id="@+id/email"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="What's your email?"
            android:layout_marginTop="10dp"
            android:inputType="textEmailAddress"
            android:textSize="16sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="LinkedIn"
            android:textColor="#622C2C"
            android:textStyle="bold"/>
        <View
            android:layout_gravity="center_horizontal"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="#622C2C"
            android:layout_marginTop="5px"/>

        <EditText
            android:id="@+id/linkedin"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="What's your linkedin account link?"
            android:layout_marginTop="10dp"
            android:inputType="textEmailAddress"
            android:textSize="16sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="Twitter"
            android:textColor="#622C2C"
            android:textStyle="bold"/>
        <View
            android:layout_gravity="center_horizontal"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="#622C2C"
            android:layout_marginTop="5px"/>

        <EditText
            android:id="@+id/twitter"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="What's your twitter account link?"
            android:layout_marginTop="10dp"
            android:inputType="textEmailAddress"
            android:textSize="16sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="Facebook"
            android:textColor="#622C2C"
            android:textStyle="bold"/>
        <View
            android:layout_gravity="center_horizontal"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="#622C2C"
            android:layout_marginTop="5px"/>

        <EditText
            android:id="@+id/facebook"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="What's your facebook account details?"
            android:layout_marginTop="10dp"
            android:inputType="textEmailAddress"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/createcard"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:text="Create"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:layout_gravity="center"
            android:background="#622C2C" />
        <View
            android:layout_gravity="center_horizontal"
            android:layout_width="fill_parent"
            android:layout_height="10dip"
            android:layout_marginTop="5px"/>

    </LinearLayout>

</ScrollView>